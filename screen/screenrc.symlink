# Look and feel
caption always "%{= bb}%{+b w}Screen: %n - %t | %=%S %c%h"
hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"

# Our warning of activity
activity "Activity in %t(%n)"

# Left Right meta key mods
#ALT-,. and ALT-<>
bindkey "^[<" prev
bindkey "^[>" next

# scrollback
defscrollback 50000

